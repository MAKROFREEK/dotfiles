[bar/main]
width = 100%
height = 22
offset-x = 0
offset-y = 0
opacity = 90
radius = 0
radius-top = 0
radius-bottom = 0
background = #101014
foreground = #f8f8f2
padding-left = 4px
padding-right = 4px
font-0 = "UbuntuNerdFont:Bold:pixelsize=13; 3"
modules-left = xworkspaces
modules-center = date
modules-right = pomo sep network sep pulseaudio sep powermenu sep i3
cursor-click = pointer
cursor-scroll = ns-resize
line-size = 3
line-color = #ff5555
border-size = 4
border-color = #101014
wm-restack = i3
override-redirect = false
enable-ipc = true

[module/sep]
type = custom/text
content = "   "

[module/cpu]
type = internal/cpu
interval = 0.5
warn-percentage = 95
label = "CPU: %percentage%%"

[module/memory]
type = internal/memory
interval = 3
warn-percentage = 95
label = RAM: %percentage_used%%

[module/date]
type = internal/date
interval = 1.0
time = %I:%M %p
time-alt = %A, %d %B %Y
format = <label>
label = %time%
right-click = kitty && calcurse

[module/network]
type = internal/network
interface = wlp58s0
interface-type = wireless
interval = 3.0
udspeed-minwidth = 5
accumulate-stats = true
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %netspeed% 
label-disconnected = " Discconnected"
click-left = networkmanager

network": {
    	"on-click": "networkmanager_dmenu",
	"interval": 1,
    	"format": "{ifname}",
	"format-ethernet": "󰈀",
        "format-wifi": "",
        "format-linked": "󰈂",
       	"format-disconnected": "󱚼",
        //"format-alt": "{essid} {bandwidthDownBytes} {bandwidthUpBytes}",
        "tooltip-format": "
[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-muted = 󰸈 0%
label-muted-foreground = ${color.fg-alt}
ramp-volume-0 = 󰕿
ramp-volume-1 = 
ramp-volume-2 = 󰕾
interval = 5
use-ui-max = true
click-right = pavucontrol

[module/xworkspaces]
type = internal/xworkspaces

label-active = 
label-active-padding = 1
label-active-foreground = ${colors.foreground}
label-active-font = 1

label-occupied = 
label-occupied-padding = 1
label-occupied-font = 1

label-empty =   
label-empty-background = ${colors.background}
label-empty-padding = 1
label-empty-font = 1

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
label-open = ""
label-open-foreground = ${colors.urgent}
label-close =
label-close-foreground = ${colors.success}
label-separator = 
label-separator-foreground = ${colors.foreground}

;Powermenu
menu-0-0 = "Reboot "
menu-0-0-exec = menu-open-1
menu-0-0-foreground = ${colors.urgent}

menu-0-1 = "Power Off "
menu-0-1-exec = menu-open-2
menu-0-1-foreground = ${colors.urgent}

menu-0-2 = "Hibernate "
menu-0-2-exec = menu-open-3
menu-0-2-foreground = ${colors.warning}

menu-0-3 = "Logout "
menu-0-3-exec = menu-open-4
menu-0-3-foreground = ${colors.urgent}

menu-0-4 = "Cancel "
menu-0-4-exec = label-close
menu-0-4-foreground = ${colors.success}

;Reboot
menu-1-0 = "Cancel "
menu-1-0-exec = menu-open-0
menu-1-0-foreground = ${colors.success}
menu-1-1 = "Reboot"
menu-1-1-exec = systemctl reboot
menu-1-1-foreground = ${colors.urgent}

;Shutdown
menu-2-0 = "Power off "
menu-2-0-exec = systemctl poweroff
menu-2-0-foreground = ${colors.urgent}
menu-2-1 = "Cancel "
menu-2-1-exec = menu-open-0
menu-2-1-foreground = ${colors.success}

;Hibernate
menu-3-0 = "Hibernate "
menu-3-0-exec = systemctl hibernate
menu-3-0-foreground = ${colors.urgent}
menu-3-1 = "Cancel"
menu-3-1-exec = menu-open-0
menu-3-1-foreground = ${colors.success}

;Logout
menu-4-0 = "Logout "
menu-4-0-exec = i3-msg exit
menu-4-0-foreground = ${colors.urgent}
menu-4-1 = "Cancel"
menu-4-1-exec = menu-open-0
menu-4-1-foreground = ${colors.success}

[module/redshift]
type = custom/script
format-prefix = " "  
exec = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh temperature 
click-left = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh toggle 
scroll-up = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh increase
scroll-down = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh decrease
interval=0.5

[module/pomo]
type = custom/script
format-prefix = "󱎫 "
click-left = bash ~/.config/scripts/timer.sh

[module/i3]
type = internal/i3
pin-workspaces = false
show-urgent = false
strip-wsnumbers = true
index-sort = false
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = false
label-mode = %mode%
format = <label-mode>
